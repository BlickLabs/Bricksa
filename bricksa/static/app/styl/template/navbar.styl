#navbar
  background $darkBlue
  height 70px
  left 0
  position fixed
  top 0
  width 100%
  z-index 10
  
  .logo-container
    display inline-block
    margin 8px 45px
    height 54px
    
    img
      height 100%
      width auto

  .menu-container
    float right
    height 100%
    margin-right 70px

    .menu-list
      background transparent
      font-variant small-caps
      font-weight $fontBlack
      height 100%
      text-align center
      
      li
        display inline-block
        height 100%
        position relative
        
        &:not(:first-child)
          margin-left -4px
        
        a
          color white
          display block
          height 100%
          line-height 70px
          padding 0 15px
          
          &:hover
            background $darkGray

        &.active a
          background $darkGray
        
      .submenu-container
        width auto
        
        &:hover
          ul
            display inline-block
            
          >a
            background $darkGray

        ul
          display none
          font-size 15px
          left 0
          padding-left 0
          position absolute
          top 70px
          width 100%
          
          li
            display block
            margin 0
          
          a
            background $darkGray
            line-height 42px
            
            &:hover
              background $gray
              
@media $windowSmall
  #navbar
    height 56px