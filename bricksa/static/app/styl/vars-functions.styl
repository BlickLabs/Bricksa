// Mixins
//Responsive fonts
r-font-size(sizeName)
  if sizeName == 'base'
    font-size 18px
  else if sizeName == 'semibig'
    font-size 20px
  else
    font-size 18px
  
  @media $windowSmall
    if sizeName == 'base'
      font-size 16px
    else if sizeName == 'semibig'
      font-size 18px
    else 
      font-size 16px
  
  @media $windowXSmall
    if sizeName == 'base'
      font-size 14px
    else if sizeName == 'semibig'
      font-size 16px
    else
      font-size 14px

rc-font-size(base, small, extraSmall = small)
  font-size base
  
  @media $windowSmall
    font-size small
  
  @media $windowXSmall
    font-size extraSmall

// Other mixins
simple-border(side, width, colour, style = solid)
  border-color colour
  border-style style
  if side == 'top'
    border-width width 0 0 0
  else if side == 'right'
    border-width 0 width 0 0
  else if side == 'bottom'
    border-width 0 0 width 0
  else if side == 'left'
    border-width 0 0 0 width
  else if side == 'topbottom'
    border-width width 0
  else if side == 'leftright'
    border-width 0 width
  else if side == 'notop'
    border-width 0 width width width
  else if side == 'noright'
    border-width width 0 width width
  else if side == 'nobottom'
    border-width width width 0 width
  else if side == 'notop'
    border-width width width width 0
  else if side == 'all'
    border-width width
  else
    border-width width