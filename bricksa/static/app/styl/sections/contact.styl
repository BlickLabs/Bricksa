.general-section.contact
  .section-content.columns
    display flex
    
    .big-column
      background $blue
      flex-grow 1
      max-width 75%
      padding 110px 0 120px 125px
      z-index 2

    .small-column
      background $darkBlue
      content ' '
      width 25%
      
    .contact-form
      float left
      text-align right
      width 50%
      
      label, input, textarea
        display block
        text-align left

      label:not(.error)
        color white
        rc-font-size 22px 20px 18px
        font-weight normal
        line-height 2.3
        
        &:not(:first-of-type)
          margin-top 15px
        
      input, textarea
        background white
        border solid 1px #979797
        rc-font-size 22px 20px 18px
        padding 0.841em
        width 100%
        
      textarea
        height 196.3px
        resize none
        
      .bricksa-button
        border-width 3px
        letter-spacing 0.1px
        margin-top 50px
        padding 8px 30px
        
      .error
        color white
        rc-font-size 18px 16px 14px
        font-weight normal
        margin-top 8px
        
    .contact-info
      background white
      margin-left calc(50% + 56px)
      margin-top 55px
      width 65%
      
      .text
        padding 36px 65px 0 50px
      
      .title, .mail, .phone
        display block
      
      .title
        color #4a4a4a
        rc-font-size 21.6px 18px 16px
        letter-spacing 0.00925925925em
        
      .mail
        margin-top 25px
        
      .phone
        margin-top 20px
        
      .map
        background $gray
        margin-top 74px
        height 289px
        
@media screen and (max-width: 1235px)
  .general-section.contact
    .section-content.columns
      .big-column
        padding 50px 0 50px 80px

      .contact-form
        input, textarea
          padding 0.6em
          
      .contact-info .map
        margin-top 50px
        
@media screen and (max-width: 930px)
  .general-section.contact
    .section-content.columns
      flex-wrap wrap

      .big-column
        padding 30px 40px
        width 100%

      .small-column
        display none
        
      .contact-form
        float none
        width 100%
        
        .bricksa-button
          margin-top 30px
        
      .contact-info
        margin 40px 0 0 0
        width 100%
        
        .text
          padding 30px
          
        .map
          height calc((9/16)*(100vw - 80px))
          margin 0