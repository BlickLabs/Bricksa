.homepage-banners
  background $blue
  height calc(100vh - 95px)
  width 100%
  
  #banners-carousel
    height 100%
    width 100%
  
  .homepage-banner
    align-items stretch
    display flex
    height 100%
    position relative
    width 100%
    
    .banner-white-box-container
      width 290px
      
      .banner-white-box
        background rgba(white, 80%)
        margin-top calc(50vh - 95px)
        padding 25px
        transform translateY(-50%)
      
    .banner-info-container
      flex-grow 1
      
      .banner-info
        color white
        -center-block()
        margin-top calc(50vh - 95px)
        transform translateY(-50%)
        width 290px
      