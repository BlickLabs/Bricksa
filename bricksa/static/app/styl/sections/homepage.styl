.homepage-banners
  height calc(100vh - 95px)
  width 100%
  
  #banners-carousel
    height 100%
    width 100%
    
    .slick-list,
    .slick-track
      height 100%
    
    .arrow-next
      background-image url('../img/icons/carousel-right-arrow.png')
      background-size cover
      display inline-block
      height 50px
      position absolute
      right 0
      top 50%
      transform translateY(-100%)
      width 50px
  
  .homepage-banner
    background-blend-mode multiply
    background-color rgba(black, 0.2)
    height 100%
    padding-top calc(50vh - 95px)
    position relative
    width 100%
    
    .banner-text-container
      align-items flex-end
      display flex
      height auto
      transform translateY(-50%)
      
      .banner-white-box
        background rgba(white, 80%)
        height 328px
        padding 32px 38px
        width 260px
        
        p
          font-size 17px
          line-height 30px
          margin-bottom 0
          
          &::before
            background $darkBlue
            content ' '
            display block
            height 3px
            margin-bottom 15px
            margin-top 5px
            width 30px
            
      .banner-info-container
        flex-grow 1
        text-align center
        
        .banner-info
          color white
          display inline-block
          flex-grow 1
          font-variant small-caps
          font-weight $fontBlack
          text-align left
          width auto
        
          .banner-title
            display inline-block
            font-size 76px
            font-weight inherit
            line-height 0.75
            margin 0
            max-width 520px
            min-width 280px
          
          .banner-motto
            display block
            font-size 28px
            line-height 0.9
            margin-top 8px
            width 280px
            
          .bricksa-button
            margin-bottom 20px
            margin-top 120px
      