.projects-section
  .project-type-title
    -center-block()
    width 88%
    
    span
      background $darkGray
      color white
      display inline-block
      font-size 27px
      font-variant small-caps
      font-weight $fontBlack
      line-height 70px
      padding-left 50px
      
  &.finished-projects
    .project-type-title span
      width 400px
      
    .project-item-container .project-item .big-row
      .project-thumbnail
        flex-basis 400px
        height 500px
      
      .project-text
        max-width calc(100% - 400px)
        
        .project-title::after
          margin-top 26px
      
        .project-description
          margin-top 70px
    
  &.current-projects
    .project-type-title span
      width 340px
      
    .project-item-container .project-item .big-row
      .project-thumbnail
        flex-basis 340px
        height 370px
        
      .project-text
        max-width calc(100% - 340px)
        
        .project-title::after
          margin-top 12px
        
        .project-description
          margin-top 45px
      
  .project-item-container
    background white
    
    &:not(:first-child)
      margin-top 30px
    
    .project-item
      color white
      -center-block()
      width 88%
      
      &-row
        align-items center
        display flex
        
        &.big-row
          background $blue
          
          .project-text
            padding 30px 80px

            .project-title
              font-size 64px
              font-variant small-caps
              font-weight $fontBlack
              letter-spacing 3px
              line-height 50px
              margin 0
              
              &::after
                background white
                content ' '
                display block
                height 4px
                width 32px
              
            .project-description
              font-weight $fontBook
              line-height 33px
          
        &.small-row
          background $darkBlue
          
          .project-thumbnail
            width 280px
          
        >div:not(.project-thumbnail)
          flex-grow 1